        position: relative;
    }

    #clearSearch {
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        z-index: 2;
        background: transparent;
        border: none;
        color: gray;
        font-size: 1.2rem;
        cursor: pointer;
    }

        #clearSearch:hover {
            color: red;
        }






    /* Center text inside the cards */
    .card-body {
