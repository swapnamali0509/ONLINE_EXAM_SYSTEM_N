@model Questions.Models.Exam.CreateQuestions
@{
    ViewBag.Title = "Edit Question";
    Layout = "~/Views/Shared/_TeacherNavbarPage1.cshtml";
}



<style>
    @@import url('https://fonts.googleapis.com/css2?family=Cormorant+Infant:wght@500&display=swap');
    body {
        background-color: #1A2428;
        font-family: 'Cormorant Infant', serif;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Question</h2>
    <form method="post" action="@Url.Action("UpdateQuestion", "Teacher")" class="p-4 shadow-sm bg-light rounded">
        <input type="hidden" name="examId" value="@Model.ExamId" />
        <input type="hidden" name="questionId" value="@Model.QuestionId" />

        <div class="mb-4">
            <label for="QuestionNo" class="form-label fw-bold">Question Number</label>
            <input type="number" class="form-control border-primary" id="QuestionNo" name="QuestionNo" value="@Model.QuestionNo" required />
        </div>

        <div class="mb-4">
            <label for="Question" class="form-label fw-bold">Question Text</label>
            <textarea class="form-control border-primary" id="Question" name="Question" rows="3" required>@Model.Question</textarea>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Option1" class="form-label fw-bold">Option 1</label>
                <input type="text" class="form-control border-info" id="Option1" name="Option1" value="@Model.Option1" required />
            </div>
            <div class="col-md-6 mb-3">
                <label for="Option2" class="form-label fw-bold">Option 2</label>
                <input type="text" class="form-control border-info" id="Option2" name="Option2" value="@Model.Option2" required />
            </div>
            <div class="col-md-6 mb-3">
                <label for="Option3" class="form-label fw-bold">Option 3</label>
                <input type="text" class="form-control border-info" id="Option3" name="Option3" value="@Model.Option3" required />
            </div>
            <div class="col-md-6 mb-3">
                <label for="Option4" class="form-label fw-bold">Option 4</label>
                <input type="text" class="form-control border-info" id="Option4" name="Option4" value="@Model.Option4" required />
            </div>
        </div>

        <div class="mb-4">
            <label for="CorrectOption" class="form-label fw-bold">Correct Option</label>
            <input type="text" class="form-control border-success" id="CorrectOption" name="CorrectOption" value="@Model.CorrectOption" placeholder="Enter the correct option (e.g., Option1)" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times"></i> Close
            </button>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save Question
            </button>
        </div>
    </form>
</div>
