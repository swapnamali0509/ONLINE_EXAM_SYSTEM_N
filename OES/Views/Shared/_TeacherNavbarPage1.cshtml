        <style >
        body {
            font-family: 'Cormorant Infant', serif;
        }

        @@import url('https://fonts.googleapis.com/css2?family=Cormorant+Infant:wght@500&display=swap');
        .navbar {
            background-color: #343a40;
        }

        .navbar .nav-link {
            color: #fff;
            margin: 0 15px;
        }

            .navbar .nav-link:hover {
                color: #00d1b2;
            }

        .navbar .nav-item {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            min-width: 200px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

            .dropdown-content ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

                .dropdown-content ul li {
                    padding: 8px 10px;
                    font-size: 14px;
                }

                    .dropdown-content ul li a {
                        text-decoration: none;
                        color: #333;
                        display: block;
                    }

                        .dropdown-content ul li a:hover {
                            color: #fff;
                            background-color: #00d1b2;
                            border-radius: 4px;
                        }

        .nav-item:hover .dropdown-content {
            display: block;
        }

        .navbar-content {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .navbar-logo {
            position: absolute;
            left: 20px;
            font-size: 20px;
            font-weight: bold;
            color: #00d1b2;
        }

            .navbar-logo img {
                max-height: 100%;
                width: auto;
            }

        .navbar  {
            border: none;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #000000, #1f1f1f, #49676b, #6f4141);
            background-size: 200% 200%;
            animation: gradient 6s ease infinite;
            color: white;
        }

        @@keyframes gradient {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 20px 0;
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: linear-gradient(135deg, #000000, #1f1f1f, #49676b, #6f4141);
            background-size: 200% 200%;
            animation: gradient 6s ease infinite;
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        .navbar-logo {
            display: flex;
            align-items: center;
            justify-content: center; /* Adjust as needed */
            height: 100%; /* Ensures it matches the height of the navbar */
        }

        .navbar-logo-img {
            max-height: 100%; /* Ensures the image does not exceed the navbar height */
            max-width: 100%; /* Ensures the image scales proportionally */
            object-fit: contain; /* Ensures the image looks good within its container */
        }
     
